<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.tumedia.metoo.dao.qna.QnADAO">

	<select id="findAllQnA"
		resultType="com.tumedia.metoo.model.qna.QnA">
		SELECT
		*
		FROM tumedia.QUESTION
		WHERE TYPE = #{type}
	</select>

	<select id="findQnADetailById"
		resultType="com.tumedia.metoo.model.qna.QnA">
		SELECT 
		*
		FROM tumedia.QUESTION
		WHERE ID = #{id}
	</select>

	<insert id="insertQnA"
		parameterType="com.tumedia.metoo.model.qna.QnA">
		
		INSERT
		INTO tumedia.QUESTION (
			  TITLE
			, CONTENT
			, TYPE
			, VIEW_CNT
			, AUTHOR
			, FILES
			, CREATED_AT		
		) VALUES (
			#{title}
			,#{content}
			,#{type}
			,#{viewCnt}
			,#{author}
			,#{files}
			,SYSDATE()
		)

	</insert>

</mapper>